{
    "name": "simple-route53-ddns-cron",
    "type": "module",
    "version": "0.0.3",
    "description": "Simple expressjs server that runs a cron expression to call a script to update the public IP address of the current network to Route53 Hosted Zone A Record Set",
    "engines": {
        "node": ">=24",
        "npm": ">=10"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js"
        },
        "./*": {
            "import": "./dist/*.js"
        }
    },
    "bin": {
        "simple-route53-ddns-cron": "./dist/index.js"
    },
    "scripts": {
        "build": "rimraf dist/* && npm run lint && node ./build.js",
        "start": "npm run build && nodemon -r dotenv/config dist/index.js",
        "lint": "./node_modules/.bin/eslint . --fix",
        "test": "vitest run",
        "prettier:format": "prettier --write ./src/**/*.ts",
        "prepare": "npm run build && husky install",
        "simple-route53-ddns": "./node_modules/.bin/simple-route53-ddns"
    },
    "keywords": [
        "aws",
        "route53",
        "dynamic",
        "dns"
    ],
    "author": {
        "email": "bleushade@gmail.com",
        "name": "Julian Pereira",
        "url": "https://www.julian-pereira.com"
    },
    "license": "ISC",
    "dependencies": {
        "@pejulian/simple-route53-ddns": "^0.0.21",
        "chalk": "^5.6.2",
        "express": "^5.2.1",
        "node-cron": "^4.2.1",
        "shelljs": "^0.10.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.2",
        "@types/rimraf": "^4.0.5",
        "@types/shelljs": "^0.10.0",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "dotenv": "^17.2.3",
        "esbuild": "^0.27.1",
        "esbuild-node-externals": "^1.20.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.11",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "semver": "^7.7.3",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    }
}
